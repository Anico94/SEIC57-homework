<h1><%= @director.name %></h1>

<%= image_tag @director.image, :class => 'feature' if @director.image.present?  %>

<ul>
    <li>Name: <%= @director.name %> </li>
</ul>

<% @director.movies.each do |movie| %>
    <%= link_to image_tag( movie.image, :class => 'thumb' ), movie %>
<% end %>

<div class="controls">
    <%= link_to 'Edit Director', edit_director_path(@director.id) %>
    <%= link_to 'Delete Director', @director, :method => :delete, :data => {:confirm => "Are U sure?" } %>
</div>