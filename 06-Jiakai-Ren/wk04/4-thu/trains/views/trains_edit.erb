<h1>Edit data for <%= @train["name"] %> Set</h1>

<form action="/trains/<%= @train["id"] %>" method="post">
    <label>
        Train set:
        <input name="name" value="<%= @train["name"] %>" placeholder="C" required>
    </label>

    <label>
        On lines:
        <input name="lines" value="<%= @train["lines"] %>" placeholder="T1, T3, T4, etc" required>
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @train["image"] %>" placeholder="https://...">
    </label>

    <label>
        Rating:
        <input type="number" step="0.1" min="0" max="10" name="review" value="<%= @train["review"] %>" placeholder="e.g. 7.6 (0-10)">
    </label>

    <div class="long-button-container">
        <button class="long-button">Fix the train</button>
    </div>

</form>