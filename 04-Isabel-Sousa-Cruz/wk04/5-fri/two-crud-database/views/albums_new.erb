<div>
    <h1>Add a new album</h1>

    <% if @already_exists %>
        <div>This album already exists!</div>
    <% end %>

    <form action="/albums" method="post">
        <label>Name</label>
        <input placeholder="TRAUMA" name="name" required>

        <label>Band</label>
        <input placeholder="I Prevail" name="band" required>

        <label>Thumbnail</label>
        <input placeholder="url" name="image" required>

        <label>Released year</label>
        <input placeholder="2010" name="released_year">

        <label>Info</label>
        <input placeholder="Fun facts" name="info">

        <br>
        <button>Add</button>
    </form>
</div>